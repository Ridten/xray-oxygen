<!-- Конфиг для кастомизации Loadscreen интерфейса. Для включения тэгов 
"loading_progress_percent" и "loading_stage" необходимо ввести консольную команду rs_loadingstages 1 -->
<w>
	<background width="1024" height="768">											<!-- Фон экрана загрузки-->
		<auto_static width="1024" height="768">
			<texture>ui_mm_loading_screen</texture>
		</auto_static>
	</background>

	<engine_version x="610" y="120">
		<text color="gray" font="ui_font_electron_18"/>
	</engine_version>
	
	<loading_logo x="0" y="173" width="1024" height="399"/>							<!-- Картинка загружаемого уровня-->

	<loading_progress_background x="260" y="599" width="405" height="4">			<!-- Фон под прогресс бар загрузки-->
		<texture width="405" height="4" color="black" a="255">ui_mm_loading_progress_bar</texture>
	</loading_progress_background>

	<loading_progress x="260" y="599" width="506" height="4" mode="from_center" min="0" max="100" pos="0" inertion="5.0">
		<progress>
			<texture>ui_mm_loading_progress_bar</texture>							<!-- Прогресс бар загрузки-->
		</progress>
		<min_color color="white"/>
		<middle_color color="blue"/>
		<max_color color="white"/>
	</loading_progress>

	<loading_progress_percent  x="500" y="574">										<!-- Проценты загрузки числами-->
		<text color="gray" font="ui_font_electron_18"/>
	</loading_progress_percent>

	<loading_stage x="260" y="530" width="506" height="20">							<!-- Стадия загрузки текстом-->
		<text align="c" color="gray" font="letterica18"/>
	</loading_stage>

	<loading_header x="260" y="622" width="506" height="20">						<!-- Рубрика 100 советов в Зоне-->
		<text align="c" color="white" font="letterica18"/>
	</loading_header>

	<loading_tip_number x="260" y="658" width="506" height="20">					<!-- Номер Совета-->
		<text align="c" color="gray" font="letterica18"/>
	</loading_tip_number>

	<loading_tip x="163" y="676" width="700" height="80" complex_mode="1">
		<text alignment="c" align="c" color="gray" font="letterica18"/>				<!-- Текст совета-->
	</loading_tip>
</w>